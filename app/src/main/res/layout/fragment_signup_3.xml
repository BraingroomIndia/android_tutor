<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.braingroom.tutor.viewmodel.activity.SignupViewModel"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/item_search_select_fragment_opener"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:vm="@{vm.countryVm}" />
        <include
            layout="@layout/item_search_select_fragment_opener"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:vm="@{vm.stateVm}" />

        <include
            layout="@layout/item_search_select_fragment_opener"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:vm="@{vm.cityVm}" />
        <include
            layout="@layout/item_search_select_fragment_opener"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:vm="@{vm.localityVm}" />
        <include
            android:id="@+id/instituteName"
            layout="@layout/floating_label_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:data="@{vm.instituteName}"/>
        <include
            android:id="@+id/instituteId"
            layout="@layout/floating_label_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:data="@{vm.instituteId}"/>
        <include
            layout="@layout/floating_label_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:data="@{vm.address}"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SignUp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_med"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/black"
            android:onClick="@{vm.apiSignUp}"/>
    </LinearLayout>
</layout>