<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
   <data>
        <variable
            name="vm"
            type="com.braingroom.tutor.viewmodel.item.NotificationItemViewModel"/>
   </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@{vm.color}"
            android:onClick="@{vm.onClick}"
            android:paddingBottom="@dimen/margin_med"
            android:paddingLeft="@dimen/margin_small"
            android:paddingTop="@dimen/margin_med"
            android:text="@{vm.title}"
            android:textColor="@color/black" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bottom_line_drawable"/>
    </LinearLayout>
</layout>
