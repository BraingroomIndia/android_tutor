<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

      <data>

          <import type="android.view.View" />

          <import type="android.text.InputType" />

          <import type="android.text.Html" />

          <import type="com.braingroom.tutor.utils.ConstantsKt"/>

    <variable
              name="data"
              type="com.braingroom.tutor.viewmodel.item.TextIconViewModel" />

      </data>

      <android.support.design.widget.TextInputLayout
          android:id="@+id/input_layout_floating_label"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/margin_small"
          android:hint="@{data.hinttext}"
          android:visibility="@{data.text==null?View.GONE:View.VISIBLE}">

          <EditText
              android:id="@+id/input_password"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:enabled="true"
              android:inputType="@{data.inputType==ConstantsKt.PASSWORD_INPUT?(InputType.TYPE_TEXT_VARIATION_PASSWORD|InputType.TYPE_CLASS_TEXT):data.inputType}"
              android:text="@={data.text}"
              tools:text="Collage Name"
              android:textColor="@color/colorPrimaryDark"
              />

      </android.support.design.widget.TextInputLayout>
</layout>