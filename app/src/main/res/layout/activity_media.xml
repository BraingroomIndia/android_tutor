        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/stroke_material_blue900"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/photos_radio"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/custom_radio_toggle_selector_left"
                android:button="@null"
                android:checked="true"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:onClick="@{vm.onImage}"
                android:text="Photos"
                android:textColor="@{vm.isVideo? @color/material_blue900 : @color/white}"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/videos_radio"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/custom_radio_toggle_selector_right"
                android:button="@null"
                android:checked="false"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:onClick="@{vm.onVideo}"
                android:text="Videos"
                android:textColor="@{vm.isVideo?@color/white: @color/material_blue900 }"
                android:textSize="16dp" />

        </RadioGroup>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bind:items="@{vm.item}"
            bind:span="@{3}"
            bind:view="@{vm.viewProvider}" />
